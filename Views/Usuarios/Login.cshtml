@model Examen_UII.Models.Usuarios
@{
    ViewData["Title"] = "Login";
}

<div class="container text-center mt-3">
    <div class="row justify-content-center">
        <div class="col-4">
            <div class="card text-center">
                <div class="card-header bg-info text-white">
                    Control de agua
                </div>
                <div class="card-body">
                    <img src="https://cdn-icons-png.flaticon.com/512/4357/4357633.png" alt="Logo de Agua"
                        class="img-fluid" style="width: 150px;" />
                    <form asp-action="Login" method="post">
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="Usuario"></label>
                                <input type="text" asp-for="Usuario" class="form-control">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                <label asp-for="Password"></label>
                                <input type="password" asp-for="Password" class="form-control">
                            </div>
                        </div>
                        <div class="mt-2">
                            <input type="submit" value="Iniciar SesiÃ³n" class="btn btn-info text-white">
                        </div>
                    </form>
                </div>
                @if (ViewBag.Error != null)
                {
                    <h5 class="text-center text-danger">@ViewBag.Error</h5>
                }
            </div>

        </div>
    </div>
</div>
