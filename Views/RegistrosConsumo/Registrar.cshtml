@model Examen_UII.Models.RegistrosConsumo

@{
    ViewData["Title"] = "Registrar";
}

<h1>@ViewData["Title"]</h1>

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title text-center">Registrar Dispositivo</h3>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Registrar">
                        <div asp-validation-summary="All" class="text-danger"></div>
                        <div class="form-group">
                            <input type="hidden" asp-for="DispositivosId" value="@ViewData["DispositivosId"]" />
                        </div>


                        <div class="form-group">
                            <label for="CantidadLitrosRegistrados">Cantidad de Litros Registrados:</label>
                            <input type="text" asp-for="CantidadLitrosRegistrados" class="form-control" />
                        </div>

                        <center>
                            <button type="submit" class="btn btn-success mt-3">Registrar</button>
                        </center>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
