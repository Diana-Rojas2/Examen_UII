@model IEnumerable<Examen_UII.Models.Dispositivos>

@{
    ViewData["Title"] = "Consultar";
}
@if (User.IsInRole("Admin"))
{

    <form method="get" asp-action="Registrar">
        <button class="btn btn-primary" type="submit">Agregar un Dispositivo</button>
    </form>

}
<div class="container">
    <div class="row justify-content-center">
        <div class="col">
            <h2 class="text-center">Dispositivos registrados</h2>
            <br>
            <table id="dispositivosTable" class="table table-striped">
                <thead>
                    <tr>
                        <th>Identificador</th>
                        <th>Direcci贸n MAC</th>
                        <th>Descripci贸n</th>
                        <th>Prioridad</th>
                        <th>Latitud</th>
                        <th>Longitud</th>
                        <th>Usuario</th>
                        <th>Zona</th>
                        <th>Estado</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var dispositivo in Model)
                    {
                        <tr id="@("dispositivo-" + dispositivo.ID)">
                            <td>@dispositivo.Identificador</td>
                            <td>@dispositivo.DireccionMAC</td>
                            <td>@dispositivo.Descripcion</td>
                            <td>@dispositivo.Prioridad</td>
                            <td>@dispositivo.Latitud</td>
                            <td>@dispositivo.Longitud</td>
                            <td>@dispositivo.Usuarios.Nombre</td>
                            <td>@dispositivo.Zonas.Nombre</td>
                            <td>@dispositivo.Estados.Nombre</td>
                            <td>
                                <form method="post" asp-action="Eliminar" class="mt-1">
                                    <input type="hidden" name="id" value="@dispositivo.ID" />
                                    <button class="btn btn-danger" type="submit">Eliminar</button>
                                </form>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
